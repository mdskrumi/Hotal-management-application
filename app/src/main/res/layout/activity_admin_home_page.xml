<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomePageActivity">

    <ImageView
        android:id="@+id/loggedbackgroudImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/cushomepage"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/adminpageviewemployeeButton"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_above="@+id/adminpageviewroomButton"

        android:layout_alignParentLeft="true"

        android:layout_marginBottom="40dp"
        android:layout_marginLeft="35dp"

        android:background="@drawable/imagehomebutton"
        android:onClick="anybuttonClicked"
        android:text="Employees"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"

        android:textSize="13dp" />

    <Button
        android:id="@+id/adminpageviewcustomerButton"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_alignParentRight="true"
        android:layout_above="@+id/adminpageviewroomButton"

        android:layout_marginRight="35dp"
        android:layout_marginBottom="40dp"

        android:background="@drawable/imagehomebutton"

        android:text="customers"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"
        android:textSize="13dp"
        android:onClick="anybuttonClicked"/>

    <Button
        android:id="@+id/adminpageviewroomButton"

        android:text="Rooms"
        android:textSize="13dp"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginLeft="35dp"

        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"

        android:background="@drawable/imagehomebutton"
        android:onClick="anybuttonClicked"
         />

    <Button
        android:id="@+id/adminpagesendnoticebutton"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginRight="35dp"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:background="@drawable/imagehomebutton"

        android:text="send\nnotice"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"
        android:textSize="13dp"
        android:onClick="anybuttonClicked"/>



    <Button
        android:id="@+id/adminpageviewcommentButton"

        android:text="Comments"
        android:textSize="13dp"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"

        android:layout_below="@id/adminpageviewroomButton"
        android:background="@drawable/imagehomebutton"
        android:onClick="anybuttonClicked"
        />

    <Button
        android:id="@+id/adminpageHotelDetails"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_below="@+id/adminpagesendnoticebutton"

        android:layout_marginRight="35dp"
        android:layout_marginTop="40dp"

        android:layout_alignParentRight="true"

        android:background="@drawable/imagehomebutton"

        android:text="Hotel\nInformation"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"
        android:textSize="13dp"
        android:onClick="anybuttonClicked"/>





</RelativeLayout>